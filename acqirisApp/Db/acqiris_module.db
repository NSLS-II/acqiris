## functionality: configure the board for all channels: start/stop DAQ, converters per channel
## \\Sample interval/sampling frequency, sample length, trigger source, diagnostics info, etc.
## PREFIX	-   NSLS2 naming: [PSy[:PI]][-SSy[:SI]][-TSy[:TI]]{Dev[:DI]}[SgN[:SgI][-SgD]] 
#### Psy	-	Primary system
#### Ssy	-	Secondary system
#### Dev	-	Device name
## MODULE   -	#digitizer; "0" is the first digitizer found during initialization.
##              For Acqiris crate and CPU, it's the top slot if there's one digitizer 
## NELM     -	max. number of samples to be acquired 

record(mbbo,"${PREFIX}DAQStatus-Sel")
{
   field(DESC,"DAQStatus")
   field(DTYP,"acqiris")
   field(OUT,"@M${MODULE} MDQST")
   field(PINI,"YES")
   field(SCAN,"Passive")
   field(ZRVL,"0")
   field(ZRST,"Stopped")
   field(ONVL,"1")
   field(ONST,"Running")
   info(autosaveFields_pass0, "RVAL")
}

record(longout,"${PREFIX}NbrConvertersPerChannel-SP")
{
   field(DESC,"nbrConvertersPerChannel")
   field(DTYP,"acqiris")
   field(OUT,"@M${MODULE} MNCPC")
   field(PINI,"YES")
   field(SCAN,"Passive")
#both DOL and VAL works: must use one of them to avoid 'Floating point exception'
   field(DOL, "1")
   #field(VAL,"1")
   #info(autosaveFields_pass0, "VAL")
    info(autosaveFields_pass1, "VAL")
}

record(ao,"${PREFIX}SampFreq-SP")
{
   field(SCAN,"Passive")
   field(DESC,"sampFreq")
   field(PINI,"YES")
   field(DRVH,"8000000000")
   field(DRVL,"100")
#initial sampleRate: 100MHz
   field(VAL,"100000000")
   field(EGU,"Hz")
   field(FLNK,"${PREFIX}SampFreq-Calc_")
   #use 'VAL' instead of 'RVAL'
   info(autosaveFields_pass0, "VAL")
}

record(calc,"${PREFIX}SampFreq-Calc_")
{
   field(SCAN,"Passive")
   field(DESC,"calc sampInterval")
   #field(PINI,"YES")
   field(INPA,"${PREFIX}SampFreq-SP")
   field(CALC, "(A < 100)?100:(1.0/A)")
   #the expression below seems OK
   #field(CALC, "1.0/A")
   #field(OUT, "${PREFIX}SampInterval-SP PP")
   field(FLNK,"${PREFIX}SampInterval-SP")
}

record(ao,"${PREFIX}SampInterval-SP")
{
   field(DESC,"sampInterval")
   field(DTYP,"acqiris")
   field(DOL,"${PREFIX}SampFreq-Calc_")
   field(OMSL,"closed_loop")
   field(OUT,"@M${MODULE} MSMIN")
   #field(PINI,"YES")
   field(SCAN,"Passive")
   field(EGU,"Sec")
   field(PREC,"4")
   #use 'VAL' instead of 'RVAL'
   #info(autosaveFields_pass0, "VAL")
}

record(longout,"${PREFIX}NbrSamples-SP")
{
   field(DESC,"Number of Samples")
   field(DTYP,"acqiris")
   field(OUT,"@M${MODULE} MNSMP")
   field(PINI,"YES")
   field(SCAN,"Passive")
   #Max. number of samples <= NELM of waveform in acqiris_channel.db
   field(DRVH,"${NELM}")
   field(DRVL,"1")
#initial NbrSamples: 1000
   field(VAL,"1000")
   field(EGU,"Samples")
   info(autosaveFields_pass0, "VAL")
   field(FLNK,"${PREFIX}TimeAxis-ASub_")
 }

record(calc,"${PREFIX}SampLength-I")
{
   field(DESC,"Sample length:ns")
   field(SCAN,"Passive")
   field(INPA,"${PREFIX}SampInterval-SP CP")
   field(INPB,"${PREFIX}NbrSamples-SP CP")
   field(CALC, "A*B*(1e+09)")  
   field(EGU,"ns")
   field(FLNK,"${PREFIX}TimeAxis-ASub_")
}

record(aSub,"${PREFIX}TimeAxis-ASub_")
{
    field(DESC,"construct time axis")
    field(INAM,"timeAxisAsubInit")
    field(SNAM,"timeAxisAsubProcess")
    #get samples/data points
    field (INPA, "${PREFIX}NbrSamples-SP")
    field (FTA, "ULONG")
    field (NOA, "1")
    #get sample length (ns) 
    #no error message even when typing wrong PV '${PREFIX}SampLength-SP'
    field (INPB, "${PREFIX}SampLength-I")
    field (FTB, "DOUBLE")
    field (NOB, "1")
    #waveform data for time axis             
    field (OUTA, "${PREFIX}TimeAxis-Wf PP")
    field (FTVA, "DOUBLE")
    field (NOVA, "${NELM}")
}

record(waveform,"${PREFIX}TimeAxis-Wf")
{
   field(SCAN,"Passive")
   field(DESC,"Time axis: ns unit")
   field(PINI,"YES")
   field(NELM,"${NELM}")
   field(FTVL,"DOUBLE")
   field(INP,"${PREFIX}TimeAxis-ASub_.VALA")
   field(PREC,"3")
   field(EGU,"ns")
}

