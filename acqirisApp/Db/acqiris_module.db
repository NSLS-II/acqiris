record(ao,"${PREFIX}SampFreq-SP")
{
   field(SCAN,"Passive")
   field(DESC,"sampFreq")
   field(PINI,"YES")
   field(DRVH,"8000000000")
   field(DRVL,"0")
   field(EGU,"Hz")
   field(FLNK,"${PREFIX}SampFreq-cal_")
   #use 'VAL' instead of 'RVAL'
   info(autosaveFields_pass0, "VAL")
}

record(calcout,"${PREFIX}SampFreq-cal_")
{
   field(SCAN,"Passive")
   field(DESC,"calc sampInterval")
   field(PINI,"YES")
   field(INPA,"${PREFIX}SampFreq-SP")
   field(CALC, "(A = 0)?0:(1.0/A)")
   #the expression below seems OK
   #field(CALC, "1.0/A")
   field(OUT, "${PREFIX}SampInterval-SP PP")
}

record(ao,"${PREFIX}SampInterval-SP")
{
   field(DESC,"sampInterval")
   field(DTYP,"acqiris")
   field(OUT,"@M${MODULE} MSMIN")
   field(PINI,"YES")
   field(SCAN,"Passive")
